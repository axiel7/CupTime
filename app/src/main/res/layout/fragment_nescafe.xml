<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".nescafe.NescafeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            tools:text="21" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/lines_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line7"
                style="@style/Image.Line"
                app:srcCompat="@drawable/ic_line_7" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line6"
                style="@style/Image.Line"
                app:srcCompat="@drawable/ic_line_6" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line5"
                style="@style/Image.Line"
                app:srcCompat="@drawable/ic_line_5" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line4"
                style="@style/Image.Line"
                app:srcCompat="@drawable/ic_line_4" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line3"
                style="@style/Image.Line"
                app:srcCompat="@drawable/ic_line_3" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line2"
                style="@style/Image.Line"
                app:srcCompat="@drawable/ic_line_2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/line1"
                style="@style/Image.Line"
                app:srcCompat="@drawable/ic_line_1" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center_horizontal"
            android:hapticFeedbackEnabled="true"
            android:text="@string/start"
            app:icon="@drawable/ic_play"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reset_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:text="@string/reset"
            android:visibility="invisible"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>